<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:f="urn:import:gov.nist.toolkit.desktop.client.widget">

    <g:DockLayoutPanel unit='PCT'>
        <g:north size="5">
            <g:LayoutPanel>
                <g:layer>
                    <g:Label ui:field="logoLabel" styleName="tk-Logo-Label"/>
                </g:layer>
            </g:LayoutPanel>
        </g:north>
        <g:south size="3">
            <g:LayoutPanel>
                <g:layer>
                    <f:Status ui:field="status" />
                </g:layer>
            </g:LayoutPanel>
        </g:south>
        <g:center>
            <g:SplitLayoutPanel ui:field="split">
                <g:west size="150">
                    <f:MenuBar ui:field="menuBar" />
                </g:west>
                <g:center>
                    <f:ContentPanel ui:field="contentPanel" />
                </g:center>
            </g:SplitLayoutPanel>
        </g:center>
    </g:DockLayoutPanel>

</ui:UiBinder>